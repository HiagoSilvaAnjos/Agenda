<%- include("includes/head") %>
    <%- include("includes/nav") %>


        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="display-3 text-center">Contato</h1>
                    <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

                    <%- include('includes/messages')%>

                        <div>
                            <div class="text-left">
                                <form action="/contato/register" method="post">
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                    <div class="mb-3">
                                        <label for="new-contato-name" class="form-label">Nome</label>
                                        <input id="new-contato-name" type="text" class="form-control" name="name">
                                    </div>
                                    <div class="mb-3">
                                        <label for="new-contato-surname" class="form-label">Sobrenome</label>
                                        <input id="new-contato-surname" type="text" class="form-control" name="surname">
                                    </div>
                                    <div class="mb-3">
                                        <label for="new-contato-email" class="form-label">Email</label>
                                        <input id="new-contato-email" type="email" class="form-control" name="email">
                                    </div>
                                    <div class="mb-3">
                                        <label for="new-contato-tel" class="form-label">Telefone</label>
                                        <input id="new-contato-tel" type="tel" class="form-control" name="tel">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Criar conta</button>
                                </form>
                            </div>
                        </div>

                </div>


                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include("includes/footer"); %>